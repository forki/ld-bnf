    "xml": "<topic id=\"PHP85285\" outputclass=\"clinicalMedicinalProductInformation\" type=\"clinicalMedicinalProductInformation\" namespace=\"/clinical-medicinal-product-information/glypressin-injection\" basename=\"glypressin-injection\" title=\"Glypressin injection\">\n<title>Glypressin<tm tmtype=\"reg\"/> injection</title>\n<topic id=\"PHP85365\" outputclass=\"indicationsAndDose\" rev=\"1.35\" parent=\"/clinical-medicinal-product-information/glypressin-injection\">\n<title>Indications and dose</title>\n<body>\n<section outputclass=\"indicationAndDoseGroup\">\n<sectiondiv outputclass=\"therapeuticIndications\">\n<p outputclass=\"therapeuticIndication\">Bleeding from oesophageal varices</p>\n</sectiondiv>\n<p outputclass=\"routesOfAdministration\">By intravenous injection</p>\n<ul outputclass=\"patientGroups\">\n<li outputclass=\"patientGroup adult\">\n<p>Adult (body-weight up to 50 kg)</p>\n<p>Initially 2&#8239;mg every 4&#8239;hours until bleeding controlled, then reduced to 1&#8239;mg every 4&#8239;hours if required, maximum duration 48 hours.</p>\n</li>\n<li outputclass=\"patientGroup adult\">\n<p>Adult (body-weight 50 kg and above)</p>\n<p>Initially 2&#8239;mg every 4&#8239;hours until bleeding controlled, reduced if not tolerated to 1&#8239;mg every 4&#8239;hours, maximum duration 48 hours.</p>\n</li>\n</ul>\n</section>\n</body>\n</topic>\n<parents>\n<xref format=\"dita\" scope=\"local\" type=\"clinicalMedicinalProductInformation\" href=\"#clinicalMedicinalProductInformation\" title=\"Clinical medicinal product information\" namespace=\"/clinical-medicinal-product-information\">Clinical medicinal product information</xref>\n</parents>\n<backlinks/>\n<links>\n<xref format=\"dita\" scope=\"local\" type=\"#clinicalMedicinalProductInformation\" href=\"#clinicalMedicinalProductInformation\" namespace=\"/clinical-medicinal-product-information\" title=\"Clinical medicinal product information\" count=\"1\" rel=\"link\">Clinical medicinal product information</xref>\n</links>\n</topic>",
