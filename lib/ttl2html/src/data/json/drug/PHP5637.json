            }
        ]
    },
    "pregnancy": {
        "generalInformation": [
            {
                "type": "generalInformation",
                "textContent": "Avoid unless essential&#8212;toxicity in animal studies.",
                "html": "<p>Avoid unless essential&#8212;toxicity in <i>animal</i> studies.</p>"
            }
        ]
    },
    "breastFeeding": {
        "generalInformation": [
