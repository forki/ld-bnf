    "renalImpairment": {
        "doseAdjustments": [
            {
                "type": "doseAdjustments",
                "specificity": {
                    "textContent": "With oral use",
                    "html": "With <ph outputclass=\"route\">oral</ph> use",
                    "routes": [
                        "oral"
                    ]
                },
                "textContent": "Initially 3 mg once daily if eGFR 50&#8211;80 mL/minute/1.73 m2 (max. 6 mg once daily).\n\nInitially 1.5 mg once daily if eGFR 10&#8211;50 mL/minute/1.73 m2 (max. 3 mg once daily).",
                "html": "<p>Initially 3&#8239;mg once daily if eGFR 50&#8211;80&#8239;mL/minute/1.73&#8239;m<sup>2</sup> (max. 6&#8239;mg once daily).</p><p>Initially 1.5&#8239;mg once daily if eGFR 10&#8211;50&#8239;mL/minute/1.73&#8239;m<sup>2</sup> (max. 3&#8239;mg once daily).</p>"
            },
            {
                "type": "doseAdjustments",
                "specificity": {
                    "textContent": "With intramuscular use",
                    "html": "With <ph outputclass=\"route\">intramuscular</ph> use",
                    "routes": [
                        "intramuscular"
                    ]
                },
                "textContent": "Initial dose 100 mg on day 1 and then 75 mg on day 8 if eGFR 50&#8211;80 mL/minute/1.73 m2; recommended maintenance dose 50 mg (range 25&#8211;100 mg) monthly if eGFR 50&#8211;80 mL/minute/1.73 m2.",
                "html": "<p>Initial dose 100&#8239;mg on day 1 and then 75&#8239;mg on day 8 if eGFR 50&#8211;80&#8239;mL/minute/1.73&#8239;m<sup>2</sup>; recommended maintenance dose 50&#8239;mg (range 25&#8211;100&#8239;mg) monthly if eGFR 50&#8211;80&#8239;mL/minute/1.73&#8239;m<sup>2</sup>.</p>"
            }
        ],
        "generalInformation": [
            {
                "type": "generalInformation",
                "specificity": {
                    "textContent": "With oral use",
                    "html": "With <ph outputclass=\"route\">oral</ph> use",
                    "routes": [
                        "oral"
                    ]
                },
                "textContent": "Avoid if eGFR less than 10 mL/minute/1.73 m2.",
                "html": "<p>Avoid if eGFR less than 10&#8239;mL/minute/1.73&#8239;m<sup>2</sup>.</p>"
            },
            {
                "type": "generalInformation",
                "specificity": {
