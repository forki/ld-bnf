        "advice": [
            {
                "type": "advice",
                "title": "Visual field defects",
                "textContent": "About one-third of patients treated with vigabatrin have suffered visual field defects; counselling and careful monitoring for this side-effect are required.",
                "html": "<p>About one-third of patients treated with vigabatrin have suffered visual field defects; counselling and <b>careful monitoring</b> for this side-effect are required.</p>"
            },
            {
                "type": "advice",
                "textContent": "Encephalopathic symptoms including marked sedation, stupor, and confusion with non-specific slow wave EEG can occurrarely&#8212;reduce dose or withdraw.",
                "html": "<p>Encephalopathic symptoms including marked sedation, stupor, and confusion with non-specific slow wave EEG can occur<i>rarely</i>&#8212;reduce dose or withdraw.</p>"
            }
        ]
