    "renalImpairment": {
        "doseAdjustments": [
            {
                "type": "doseAdjustments",
                "specificity": {
                    "textContent": "With intravenous use",
                    "html": "With <ph outputclass=\"route\">intravenous</ph> use",
                    "routes": [
                        "intravenous"
                    ]
                },
                "textContent": "When used for bone metastases, if eGFR 30&#8211;50 mL/minute/1.73 m2 reduce dose to 4 mg and infuse over 1 hour; if eGFR less than 30 mL/minute/1.73 m2 reduce dose to 2 mg and infuse over 1 hour.",
                "html": "<p>When used for bone metastases, if eGFR 30&#8211;50&#8239;mL/minute/1.73&#8239;m<sup>2</sup> reduce dose to 4&#8239;mg and infuse over 1 hour; if eGFR less than 30&#8239;mL/minute/1.73&#8239;m<sup>2</sup> reduce dose to 2&#8239;mg and infuse over 1 hour.</p>"
            },
            {
                "type": "doseAdjustments",
                "specificity": {
                    "textContent": "With oral use",
                    "html": "With <ph outputclass=\"route\">oral</ph> use",
                    "routes": [
                        "oral"
                    ]
                },
                "textContent": "When used for bone metastases, if eGFR 30&#8211;50 mL/minute/1.73 m2 reduce dose to 50 mg on alternative days; if eGFR less than 30 mL/minute/1.73 m2 reduce dose to 50 mg once weekly.",
                "html": "<p>When used for bone metastases, if eGFR 30&#8211;50&#8239;mL/minute/1.73&#8239;m<sup>2</sup> reduce dose to 50&#8239;mg on alternative days; if eGFR less than 30&#8239;mL/minute/1.73&#8239;m<sup>2</sup> reduce dose to 50&#8239;mg once weekly.</p>"
            }
        ],
        "generalInformation": [
            {
                "type": "generalInformation",
                "textContent": "When used for postmenopausal osteoporosis, avoid if eGFR less than 30 mL/minute/1.73 m2.",
                "html": "<p>When used for postmenopausal osteoporosis, avoid if eGFR less than 30&#8239;mL/minute/1.73&#8239;m<sup>2</sup>.</p>"
            }
        ]
    },
