    "directionsForAdministration": {
        "directionsForAdministration": [
            {
                "type": "directionsForAdministration",
                "specificity": {
                    "textContent": "With intravenous use",
                    "html": "With <ph outputclass=\"route\">intravenous</ph> use",
                    "routes": [
                        "intravenous"
                    ]
                },
                "textContent": "For intravenous infusion (Fomicyt ), give intermittently in Glucose 5% or 10% or Water for Injections; reconstitute each 2-g vial with 50 mL infusion fluid; give 2 g over 15 minutes.",
                "html": "<p>For <i>intravenous infusion</i> (<i>Fomicyt</i>\n<tm tmtype=\"reg\"/>), give intermittently <i>in</i> Glucose 5% <i>or</i> 10% <i>or</i> Water for Injections; reconstitute each 2-g vial with 50&#8239;mL infusion fluid; give 2&#8239;g over 15 minutes.</p>"
            }
        ]
    },
    "prescribingAndDispensingInformation": {
        "prescribingAndDispensingInformation": [
            {
                "type": "prescribingAndDispensingInformation",
                "specificity": {
                    "textContent": "With oral use",
                    "html": "With <ph outputclass=\"route\">oral</ph> use",
                    "routes": [
                        "oral"
                    ]
                },
                "textContent": "Although oral preparations containing fosfomycin are not marketed in the UK, they can be used, on the advice of a microbiologist, for the treatment of uncomplicated lower urinary tract infections caused by multiple-antibacterial resistant organisms when other antibacterials cannot be used.",
                "html": "<p>Although oral preparations containing fosfomycin are not marketed in the UK, they can be used, on the advice of a microbiologist, for the treatment of uncomplicated lower urinary tract infections caused by multiple-antibacterial resistant organisms when other antibacterials cannot be used.</p>"
            },
            {
                "type": "prescribingAndDispensingInformation",
                "textContent": "Doses expressed as fosfomycin base.",
