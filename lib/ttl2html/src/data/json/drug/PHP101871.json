    "renalImpairment": {
        "generalInformation": [
            {
                "type": "generalInformation",
                "specificity": {
                    "textContent": "With oral use",
                    "html": "With <ph outputclass=\"route\">oral</ph> use",
                    "routes": [
                        "oral"
                    ]
                },
                "textContent": "Avoid oral treatment if eGFR less than 10 mL/minute/1.73 m2.",
                "html": "<p>Avoid <i>oral</i> treatment if eGFR less than 10&#8239;mL/minute/1.73&#8239;m<sup>2</sup>.</p>"
            },
            {
                "type": "generalInformation",
                "specificity": {
                    "textContent": "With intravenous use",
                    "html": "With <ph outputclass=\"route\">intravenous</ph> use",
                    "routes": [
                        "intravenous"
                    ]
                },
                "textContent": "Use intravenous treatment with caution if eGFR 40&#8211;80 mL/minute/1.73 m2 and consult product literature for dose if eGFR less than 40 mL/minute/1.73 m2.",
                "html": "<p>Use <i>intravenous</i> treatment with caution if eGFR 40&#8211;80&#8239;mL/minute/1.73&#8239;m<sup>2</sup> and consult product literature for dose if eGFR less than 40&#8239;mL/minute/1.73&#8239;m<sup>2</sup>.</p>"
            }
        ]
    },
